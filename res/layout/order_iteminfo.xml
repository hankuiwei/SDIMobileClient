<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/order_bg"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >

    <FrameLayout
        
         android:layout_width="fill_parent"
    android:background="@color/order_bg"
    android:layout_height="wrap_content"
        
        >
        
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dip"
        android:background="@drawable/bg_info_order"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                style="@style/Text.OrderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    工单编号" />

            <TextView
                android:id="@+id/order_code"
                style="@style/Text.OrderValue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="待联系"
                android:gravity="center"
                style="@style/Text.OrderItemState"
               />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/line_spit" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                style="@style/Text.OrderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主机序列号" />

            <TextView
                android:id="@+id/order_host"
                style="@style/Text.OrderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                style="@style/Text.OrderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    服务类型" />

            <TextView
                android:id="@+id/order_type"
                style="@style/Text.OrderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                style="@style/Text.OrderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    主机型号" />

            <TextView
                android:id="@+id/order_host_code"
                style="@style/Text.OrderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                style="@style/Text.OrderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    客户姓名" />

            <TextView
                android:id="@+id/order_customer"
                style="@style/Text.OrderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginRight="15dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            style="@style/Text.OrderLabel"
            android:text="预约上门时间"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            style="@style/Text.OrderDate"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_time"
            android:layout_marginTop="5dip"
            style="@style/Text.OrderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
             android:layout_marginTop="5dip"
            android:layout_height="wrap_content"
            android:id="@+id/order_count"
            style="@style/Text.OrderValue"
            android:drawableLeft="@drawable/icon_fujian" />
    </LinearLayout>
    

</FrameLayout>

   
    </LinearLayout>