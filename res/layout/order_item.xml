<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_info_order" >

    <TextView
        android:id="@+id/tv1"
        style="@style/Text.OrderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="    工单编号" />

    <TextView
        android:id="@+id/order_code"
        style="@style/Text.OrderValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv1"
        android:layout_toRightOf="@id/tv1"
        android:text="sssssssssssssss" />

    <TextView
        android:id="@+id/order_state"
        style="@style/Text.OrderItemState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv1"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:text="待联系" />

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tv1"
        android:layout_marginTop="5dip"
        android:background="@drawable/line_spit" />

    <TextView
        android:id="@+id/tv2"
        style="@style/Text.OrderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginTop="5dip"
        android:text="主机序列号" />

    <TextView
        android:id="@+id/order_host"
        style="@style/Text.OrderValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv2"
        android:layout_below="@id/line"
        android:layout_toRightOf="@id/tv2"
        android:text="111111" />

    <TextView
        android:id="@+id/tv3"
        style="@style/Text.OrderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginTop="10dip"
        android:text="    工单类型" />

    <TextView
        android:id="@+id/order_type"
        style="@style/Text.OrderValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv3"
        android:layout_below="@id/order_host"
        android:layout_toRightOf="@id/tv2"
        android:text="aaaaaaa" />

    <TextView
        android:id="@+id/tv4"
        style="@style/Text.OrderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv3"
        android:layout_marginTop="10dip"
        android:text="    主机型号" />

    <TextView
        android:id="@+id/order_host_code"
        style="@style/Text.OrderValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv4"
        android:layout_below="@id/tv3"
        android:layout_toRightOf="@id/tv2"
        android:text="sssssssaaaaaaaaaa" />

    <TextView
        android:id="@+id/tv5"
        style="@style/Text.OrderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv4"
        android:layout_marginTop="10dip"
        android:text="    客户姓名" />

    <TextView
        android:id="@+id/order_customer"
        style="@style/Text.OrderValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv5"
        android:layout_below="@id/tv4"
        android:layout_toRightOf="@id/tv2"
        android:text="xxxxxxxxxxxxxxxxx" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="15dip"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            style="@style/Text.OrderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约上门时间" />

        <TextView
            android:id="@+id/order_date"
            style="@style/Text.OrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_time"
            style="@style/Text.OrderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/rapir_count"
                style="@style/Text.OrderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_rapir" />

            <TextView
                android:id="@+id/order_count"
                style="@style/Text.OrderValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:drawableLeft="@drawable/icon_fujian" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_order_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dip"
        android:src="@drawable/btn_left"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_order_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dip"
        android:src="@drawable/btn_right"
        android:visibility="gone" />

</RelativeLayout>